{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "NodeNext",        
    "moduleResolution": "NodeNext",            
    "lib": ["ES2020"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,    
    "sourceMap": true,
  },
  "include": ["src/**/*"],
 
}
